{
  "name": "@yellow-book/api",
  "version": "0.0.1",
  "private": true,
  "nx": {
    "targets": {
      "build": {
        "executor": "@nx/esbuild:esbuild",
        "outputs": [
          "{options.outputPath}"
        ],
        "defaultConfiguration": "production",
        "dependsOn": [
          "prisma:generate"
        ],
        "options": {
          "platform": "node",
          "outputPath": "dist/apps/api",
          "format": [
            "cjs"
          ],
          "bundle": true,
          "main": "src/main.ts",
          "tsConfig": "apps/api/tsconfig.app.json",
          "assets": [
            "apps/api/src/assets"
          ],
          "generatePackageJson": true,
          "esbuildOptions": {
            "sourcemap": true,
            "outExtension": {
              ".js": ".js"
            },
            "external": [
              "@prisma/client",
              "prisma",
              "@fastify/*",
              "fastify",
              "fastify-plugin",
              "@trpc/*",
              "dotenv",
              "@ai-sdk/*",
              "ai",
              "@upstash/*"
            ]
          }
        },
        "configurations": {
          "development": {},
          "production": {
            "esbuildOptions": {
              "sourcemap": false,
              "outExtension": {
                ".js": ".js"
              }
            }
          }
        }
      },
      "prune-lockfile": {
        "dependsOn": [
          "build"
        ],
        "cache": true,
        "executor": "@nx/js:prune-lockfile",
        "outputs": [
          "{workspaceRoot}/dist/apps/api/package.json",
          "{workspaceRoot}/dist/apps/api/bun.lock"
        ],
        "options": {
          "buildTarget": "build"
        }
      },
      "copy-workspace-modules": {
        "dependsOn": [
          "build"
        ],
        "cache": true,
        "outputs": [
          "{workspaceRoot}/dist/apps/api/workspace_modules"
        ],
        "executor": "@nx/js:copy-workspace-modules",
        "options": {
          "buildTarget": "build"
        }
      },
      "prune": {
        "dependsOn": [
          "prune-lockfile",
          "copy-workspace-modules"
        ],
        "executor": "nx:noop"
      },
      "prisma:generate": {
        "executor": "nx:run-commands",
        "options": {
          "command": "bunx prisma generate --schema=libs/db/prisma/schema.prisma"
        }
      },
      "dev": {
        "continuous": true,
        "executor": "nx:run-commands",
        "dependsOn": [
          "prisma:generate"
        ],
        "options": {
          "command": "bunx tsx --watch src/main.ts",
          "cwd": "apps/api",
          "envFile": "apps/api/.env"
        }
      },
      "serve": {
        "continuous": true,
        "executor": "@nx/js:node",
        "defaultConfiguration": "development",
        "dependsOn": [
          "build"
        ],
        "options": {
          "buildTarget": "@yellow-book/api:build",
          "runBuildTargetDependencies": false
        },
        "configurations": {
          "development": {
            "buildTarget": "@yellow-book/api:build:development"
          },
          "production": {
            "buildTarget": "@yellow-book/api:build:production"
          }
        }
      }
    }
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "dependencies": {
    "@fastify/cors": "^11.1.0",
    "@fastify/sensible": "~6.0.2",
    "@prisma/client": "^6.16.2",
    "@prisma/extension-accelerate": "^2.0.2",
    "@trpc/server": "^11.5.1",
    "dotenv": "^17.2.3",
    "fastify": "~5.2.1",
    "fastify-plugin": "~5.0.1",
    "prisma": "^6.16.2",
    "tsx": "^4.20.5",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@nx/next": "^21.5.2"
  }
}
